<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_height="match_parent">


    <TextView
        android:textColor="#000"
        android:id="@+id/text_id"
        android:layout_margin="10dp"
        android:textSize="18dp"
        android:text="Id"
        android:textStyle="bold"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:layout_margin="1dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:text="Name and Number:"
            android:textColor="#000"
            android:textSize="18sp"
            android:textStyle="bold" />
        <EditText
            android:id="@+id/edittext_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="1dp"
            android:layout_weight="2"

        android:hint="Property Name and Number – Required"/>
    </LinearLayout>

    <LinearLayout
        android:layout_margin="1dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="194dp"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:text="Property Type:"
            android:textColor="#000"
            android:textSize="18sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/edittext_protype"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:hint="Property Type – Required (Apartment, House, Bungalow)"/>
    </LinearLayout>

    <LinearLayout
        android:layout_margin="1dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="153dp"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:text="Lease Type:"
            android:textColor="#000"
            android:textSize="18sp"
            android:textStyle="bold" />
    <EditText
        android:textColor="#000"
        android:id="@+id/edittext_leasetype"
        android:layout_weight="2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Property Lease Type – Required (Freehold, Leasehold, Short Let, Long Let)"/>
    </LinearLayout>

    <LinearLayout
        android:layout_margin="1dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="234dp"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:text="Bedroom Number:"
            android:textColor="#000"
            android:textSize="18sp"
            android:textStyle="bold" />
    <EditText
        android:textColor="#000"
        android:id="@+id/edittext_bednum"
        android:layout_weight="2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Number of Bedroom - Required (0, 1, 2, 3, 4, 5, 6, 7+)"/>
    </LinearLayout>

    <LinearLayout
        android:layout_margin="1dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="242dp"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:text="Bathroom Number:"
            android:textColor="#000"
            android:textSize="18sp"
            android:textStyle="bold" />
    <EditText
        android:id="@+id/edittext_bathnum"
        android:layout_weight="2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Number of Bathroom - Required (0, 1, 2, 3+)"/>
    </LinearLayout>

    <LinearLayout
        android:layout_margin="1dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="186dp"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:text="Property Size:"
            android:textColor="#000"
            android:textSize="18sp"
            android:textStyle="bold" />
    <EditText
        android:id="@+id/edittext_size"
        android:layout_weight="2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Property Size (Meter Squared) – Required"/>
    </LinearLayout>

    <LinearLayout
        android:layout_margin="1dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="193dp"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:text="Property Price:"
            android:textColor="#000"
            android:textSize="18sp"
            android:textStyle="bold" />
    <EditText
        android:id="@+id/edittext_price"
        android:layout_weight="2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Property Asking Price (£) – Required" />
    </LinearLayout>

    <LinearLayout
        android:layout_margin="1dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="253dp"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:text="Garden? (YES/NO):"
            android:textColor="#000"
            android:textSize="18sp"
            android:textStyle="bold" />
    <EditText
        android:id="@+id/edittext_garden"
        android:layout_weight="2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Garden? (YES/NO)"/>
    </LinearLayout>

    <LinearLayout
        android:layout_margin="1dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="277dp"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:text="Driveway? (YES/NO):"
            android:textColor="#000"
            android:textSize="18sp"
            android:textStyle="bold" />
    <EditText
        android:id="@+id/edittext_drive"
        android:layout_weight="2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Driveway? (YES/NO)"/>
    </LinearLayout>

    <LinearLayout
        android:layout_margin="1dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="216dp"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:text="Local Amenities:"
            android:textColor="#000"
            android:textSize="18sp"
            android:textStyle="bold" />
    <EditText
        android:id="@+id/edittext_local"
        android:layout_weight="2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Local Amenities - Optional"/>
    </LinearLayout>

    <LinearLayout
        android:layout_margin="1dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="153dp"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:text="Description:"
            android:textColor="#000"
            android:textSize="18sp"
            android:textStyle="bold" />
    <EditText
        android:id="@+id/edittext_des"
        android:layout_weight="2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Description - Optional"/>
    </LinearLayout>

    <LinearLayout
        android:layout_margin="5dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:background="#0288D1"
            android:id="@+id/button_edit"
            android:layout_weight="2"
            android:text="Edit"
            android:layout_margin="2dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <Button
            android:layout_margin="2dp"
            android:background="#D32F2F"
            android:id="@+id/button_delete"
            android:layout_weight="2"
            android:text="Delete"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <Button
            android:background="#0288D1"
            android:id="@+id/button_addreport"
            android:layout_weight="2"
            android:text="Add Report"
            android:layout_margin="2dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <Button
            android:layout_margin="2dp"
            android:background="#D32F2F"
            android:id="@+id/button_viewreport"
            android:layout_weight="2"
            android:text="View Report"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>


    <View
        android:layout_margin="5dp"
        android:background="#C5C5C5"
        android:layout_width="match_parent"
        android:layout_height="3dp"/>

</LinearLayout>